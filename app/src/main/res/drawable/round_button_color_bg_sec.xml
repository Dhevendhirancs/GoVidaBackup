<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
                android:shape="oval">
            <gradient
                    android:angle="0"
                    android:endColor="#8E1FA3"
                    android:startColor="#F0365B"
                    android:type="linear" />
            <size
                    android:height="56dp"
                    android:width="56dp" />
        </shape>
    </item>
    <item
            android:left="20dp"
            android:right="20dp"
            android:top="@dimen/d20dip"
            android:bottom="@dimen/d20dip">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="0"
                    android:endColor="#fff"
                    android:startColor="#fff"
                    android:type="linear" />
            <corners
                android:radius="@dimen/d2dip" />
        </shape>

    </item>
</layer-list>
