<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_main">
        <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/d200dip"
            android:orientation="vertical"
            android:background="@drawable/profile_background">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:gravity="center_horizontal"
                style="@style/general_text_view_style"
                android:padding="@dimen/d20dip"
                android:textStyle="bold"
                android:textColor="@color/text_entry_color"/>
            <RelativeLayout
                    android:layout_width="@dimen/d80dip"
                    android:layout_height="@dimen/d80dip"
                    android:layout_gravity="center">
                <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="@dimen/d80dip"
                        android:layout_height="@dimen/d80dip"
                        android:src="@drawable/profile_pic_3"
                        app:civ_border_color="#EEEEEE"
                        app:civ_border_width="0dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_shadow_color="#8BC34A"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/change_photo"
                style="@style/general_text_view_style"
                android:textSize="@dimen/d14dip"
                android:padding="@dimen/d20dip"
                android:textColor="@color/link_color"
                android:id="@+id/tv_change_photo"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/d30dip"
                android:paddingLeft="@dimen/d10dip"
                android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/first_name"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:text="@string/demo_name"
                            android:paddingBottom="@dimen/d30dip"
                        android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                        android:id="@+id/et_first_name"
                        android:maxLength="25"
                    android:inputType="textPersonName"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                            android:paddingTop="@dimen/d10dip"
                            android:paddingLeft="@dimen/d10dip"
                    android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/last_name"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:text="@string/demo_last_name"
                          android:paddingBottom="@dimen/d30dip"
                          android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                        android:id="@+id/et_last_name"
                          android:inputType="textPersonName"
                            android:maxLength="25"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/d10dip"
                          android:paddingLeft="@dimen/d10dip"
                          android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/email"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:text="@string/demo_profile_email"
                          android:paddingBottom="@dimen/d30dip"
                          android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                        android:id="@+id/et_official_email"
                          android:maxLength="50"
                          android:focusable="false"
                          android:clickable="false"
                          android:longClickable="false"/>
            </LinearLayout>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/personal_info"
                android:textStyle="bold"
                android:paddingTop="@dimen/d20dip"
                android:paddingLeft="@dimen/d10dip"
                android:textSize="@dimen/s16sp"
                android:textColor="@color/text_entry_color"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/d10dip"
                          android:paddingLeft="@dimen/d10dip"
                          android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/per_email"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:paddingBottom="@dimen/d30dip"
                          android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                    android:id="@+id/et_personal_email"
                    android:maxLength="50"
                          android:inputType="textEmailAddress"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/d10dip"
                          android:paddingLeft="@dimen/d10dip"
                          android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="Birthday"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:text=""
                          android:paddingBottom="@dimen/d30dip"
                          android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                          android:id="@+id/et_birthday"
                          android:focusable="false"
                          android:editable="false"
                          android:inputType="none"
                          android:longClickable="false"
                          />
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/d10dip"
                          android:paddingLeft="@dimen/d10dip"
                          android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/phone_profile_edit"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:layout_weight="20"
                          android:text="@string/demo_phone"
                          android:paddingBottom="@dimen/d30dip"
                          android:gravity="end"
                          android:textSize="@dimen/s16sp"
                          style="@style/value_enter_edittext"
                          android:textColor="@color/text_entry_color"
                          android:id="@+id/et_phone"
                          android:inputType="phone"
                          android:maxLength="15"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:paddingTop="@dimen/d10dip"
                          android:paddingLeft="@dimen/d10dip"
                          android:paddingRight="@dimen/d10dip">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/gender_profile_edit"
                          android:layout_weight="80"
                          android:textSize="@dimen/s14sp"
                          android:textColor="@color/text_entry_color"
                          style="@style/general_text_view_style"/>
                <Spinner android:layout_width="match_parent" android:layout_height="wrap_content"
                         android:layout_weight="20"
                         android:gravity="end"
                         android:spinnerMode="dropdown"
                         android:id="@+id/sp_gender"
                         android:textAlignment="textEnd">
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/bg_color_for_buttons"
        android:padding="@dimen/d10dip"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/ll_main"
        android:layout_marginTop="@dimen/d20dip">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/simple_button"
                android:text="@string/save_changes"
                android:textSize="@dimen/s12sp"
                android:layout_centerInParent="true"
            android:id="@+id/btn_save"/>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>