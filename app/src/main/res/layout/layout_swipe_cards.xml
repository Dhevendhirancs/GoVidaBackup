<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ll_swipe_card_manager"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/d20dip">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d150dip"/>
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d4dip"
        app:dotsColor="@color/text_subtext"
        app:dotsCornerRadius="10dp"
        app:dotsSize="@dimen/d10dip"
        app:dotsSpacing="@dimen/d4dip"
        app:dotsWidthFactor="2.5"
        android:gravity="center"
        app:selectedDotColor="@color/link_color"
        android:background="@color/colorWhite"
        app:progressMode="true"
        android:layout_above="@id/ll_buttons"
        android:layout_marginTop="@dimen/d20dip"/>
</LinearLayout>