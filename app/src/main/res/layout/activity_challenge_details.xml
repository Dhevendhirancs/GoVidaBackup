<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        tools:context=".ui_section.home_section.challenges_section.ActivityChallengeDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/rl_challenge_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d220dip"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/check_in_detail"
                    android:scaleType="fitXY"
                    android:id="@+id/iv_challenge_bg"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="#80000000">
                <LinearLayout
                        android:id="@+id/ll_challenge_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/d14dip"
                            android:paddingBottom="@dimen/d24dip">
                        <TextView
                                android:id="@+id/challenge_tv_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/days_30"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s22sp"
                                android:layout_above="@+id/challenge_tv_condition"/>
                        <TextView
                                android:id="@+id/challenge_tv_condition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/steps_10000"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s22sp"
                                android:layout_above="@+id/challenge_tv_points"
                                android:paddingBottom="@dimen/d16dip"/>
                        <TextView
                                android:id="@+id/challenge_tv_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/govps_100"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s14sp"
                                android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                    <RelativeLayout
                            android:id="@+id/layout_rl_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="@dimen/d10dip">
                        <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_alignParentBottom="true">
                            <ProgressBar
                                    android:layout_width="@dimen/d120dip"
                                    android:layout_height="@dimen/d120dip"
                                    android:id="@+id/challenge_pg_progress"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="75"
                                    android:progressDrawable="@drawable/circular"
                                    android:secondaryProgress="100"/>
                            <TextView
                                    android:id="@+id/challenge_tv_progress_word"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="75%"
                                    style="@style/general_text_view_style"
                                    android:textColor="@color/colorWhite"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/s20sp"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/layout_rl_accpet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/d14dip"
                            android:paddingBottom="@dimen/d24dip"
                            android:visibility="gone">
                        <Button
                                android:id="@+id/layout_btn_accept"
                                style="@style/simple_button_next"
                                android:layout_height="@dimen/d40dip"
                                android:layout_width="match_parent"
                                android:text="@string/accept"
                                android:layout_alignParentBottom="true"
                                android:textSize="@dimen/s14sp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rl_challenge_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/d10dip"
            android:background="@color/bg_color_for_buttons"
            android:paddingBottom="@dimen/d10dip"
            android:paddingStart="@dimen/d10dip"
            android:paddingEnd="@dimen/d10dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/chl_details_ll_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_weight="40">
                <TextView
                        android:id="@+id/chl_details_tv_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/general_text_view_style"
                        android:text="24 \nHours"
                        android:textStyle="bold"
                        android:textColor="@color/text_entry_color"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chl_details_ll_points"
                android:layout_toRightOf="@id/chl_details_ll_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_weight="30">
                <TextView
                        android:id="@+id/chl_details_tv_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:text="20  \nGoVPs"
                    android:textStyle="bold"
                    android:textColor="@color/text_entry_color"
                />

            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_weight="30">
                <LinearLayout
                        android:id="@+id/chl_details_ll_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/d20dip">
                    <TextView
                            android:id="@+id/chl_details_tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/general_text_view_style"
                            android:text="75%"
                            android:textStyle="bold"
                            android:textColor="@color/link_color"/>
                    <TextView
                            android:id="@+id/chl_details_tv_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/general_text_view_style"
                            android:text="Complete"
                            android:textColor="@color/text_entry_color"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/d40dip"
                    android:paddingLeft="@dimen/d10dip"
                    android:paddingRight="@dimen/d10dip">
                    <Button
                            android:id="@+id/chl_details_btn_accept"
                            style="@style/simple_button"
                            android:text="@string/accept"
                            android:layout_width="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/d10dip"
                android:paddingTop="@dimen/d10dip"
                android:paddingEnd="@dimen/d10dip"
                android:layout_below="@id/rl_challenge_parent"
                android:layout_above="@id/rl_challenge_bottom">
            <WebView
                    android:id="@+id/challenge_details_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>