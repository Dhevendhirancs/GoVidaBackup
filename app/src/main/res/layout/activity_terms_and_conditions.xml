<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui_section.terms_and_condition_section.ActivityTermsAndConditions">

    <include
            android:id="@+id/terms_toolbar"
        layout="@layout/custom_toolbar_title"/>

    <RelativeLayout
        android:id="@+id/rl_terms_btn_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d10dip"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color_for_buttons"
        >
        <Button
            android:id="@+id/terms_btn_accept"
            style="@style/simple_button"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/s18sp"
            android:layout_gravity="center"
            android:paddingStart="@dimen/d30dip"
            android:paddingEnd="@dimen/d30dip"
            android:text="@string/btn_accept_condition"
        />
    </RelativeLayout>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/terms_toolbar"
            android:layout_above="@id/rl_terms_btn_accept"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d14dip"

        >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/s14sp"
                android:gravity="left"
                style="@style/general_text_view_style"
                android:text="@string/demo_terms"
                android:textColor="@color/text_subtext"
            />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>