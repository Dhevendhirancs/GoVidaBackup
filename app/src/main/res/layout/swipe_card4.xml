<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorWhite">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/d150dip"
            android:layout_marginLeft="@dimen/d15dip"
            android:layout_marginRight="@dimen/d15dip"
            android:background="@drawable/swipe_card_background"
            android:paddingRight="@dimen/d10dip">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="@dimen/d80dip"
                    android:layout_height="@dimen/d80dip"
                    android:src="@drawable/profile_pic_3"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="0dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    app:civ_shadow_color="#8BC34A"
                    android:layout_marginLeft="@dimen/d20dip"
                    android:layout_weight="20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/d10dip"
                    android:id="@+id/iv_profile_picture"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="80"
                    android:paddingTop="@dimen/d20dip"
                    android:paddingBottom="@dimen/d20dip"
                    android:layout_marginLeft="@dimen/s20sp"
                    android:gravity="center_vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swipe_card4_title"
                        android:textStyle="bold"
                        android:textColor="@color/text_entry_color"
                        android:textSize="@dimen/s17sp"
                        style="@style/general_text_view_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/swipe_card4_desc_both"
                        android:textColor="@color/text_entry_color"
                        android:textSize="@dimen/s17sp"
                        style="@style/general_text_view_style"
                        android:id="@+id/tv_swipe_card_permission_desc"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>