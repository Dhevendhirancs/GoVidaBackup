<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/d10dip"-->
            <!--android:paddingTop="@dimen/d10dip"-->
            <!--android:paddingBottom="@dimen/d10dip"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_horizontal">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/d12dip"
        android:paddingRight="@dimen/d12dip"
        android:paddingTop="@dimen/d12dip"
        android:paddingBottom="@dimen/d10dip">
            <Button
                android:id="@+id/btn_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:checked="true"
                android:textSize="@dimen/s18sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:background="@drawable/home_page_left_button_color_change"
                android:layout_weight="25"
                android:fontFamily="@font/roboto_regular"/>
            <Button
                android:id="@+id/btn_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week"
                android:checked="true"
                android:textSize="@dimen/s18sp"
                android:textAllCaps="false"
                android:textColor="@color/default_text_color"
                android:background="@drawable/home_page_middle_button"
                android:layout_weight="25"
                android:layout_marginLeft="@dimen/d2dip"
                android:fontFamily="@font/roboto_regular"/>
            <Button
                android:id="@+id/btn_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month"
                android:checked="true"
                android:textSize="@dimen/s18sp"
                android:textAllCaps="false"
                android:textColor="@color/default_text_color"
                android:background="@drawable/home_page_middle_button"
                android:layout_weight="25"
                android:layout_marginLeft="@dimen/d2dip"
                android:fontFamily="@font/roboto_regular"/>
            <Button
                android:id="@+id/btn_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:checked="true"
                android:textSize="@dimen/s18sp"
                android:textAllCaps="false"
                android:textColor="@color/default_text_color"
                android:background="@drawable/home_page_right_button"
                android:layout_weight="25"
                android:layout_marginLeft="@dimen/d2dip"
                android:fontFamily="@font/roboto_regular"/>
        <!--</RelativeLayout>-->
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <TextView
                android:id="@+id/activity_tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/s15sp"
                android:textColor="@color/text_color_day"
                android:text="01-04-2018"
                android:padding="@dimen/d10dip"
                style="@style/general_text_view_style"/>

        <LinearLayout
                android:id="@+id/acitvity_ll_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_tv_today"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/activity_tv_day_seperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/s16sp"
                    android:textColor="@color/text_color_day"
                    android:text="@string/date_seperator"
                    style="@style/general_text_view_style"/>

            <TextView
                    android:id="@+id/activity_tv_day_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/s15sp"
                    android:textColor="@color/text_color_day"
                    android:text="01-04-2018"
                    android:padding="@dimen/d10dip"
                    style="@style/general_text_view_style"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:weightSum="2.0"
            android:padding="@dimen/d10dip"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/tv_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/s42sp"
                    android:textColor="@color/text_entry_color"
                    android:text="@string/demo_2865"
                    style="@style/general_text_view_style"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/s17sp"
                    android:textColor="@color/text_subtext"
                    android:drawableStart="@drawable/ic_steps"
                    android:drawablePadding="@dimen/d10dip"
                    android:text="@string/steps"
                    style="@style/general_text_view_style"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
        >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10dip">
                <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="@dimen/d70dip"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/text_entry_color"
                        android:textStyle="bold"
                        android:text="@string/demo_km"
                        style="@style/general_text_view_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/text_subtext"
                        android:layout_toRightOf="@id/tv_distance"
                        android:paddingStart="@dimen/d10dip"
                        android:lineSpacingMultiplier="1.29"
                        android:text="@string/distance"
                        style="@style/general_text_view_style"/>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color_for_buttons"
                        android:layout_marginTop="@dimen/d10dip"
                        android:layout_below="@id/tv_distance"
                />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10dip">

                <TextView
                        android:id="@+id/activities_tv_check_in"
                        android:layout_width="@dimen/d70dip"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/text_entry_color"
                        android:textStyle="bold"
                        android:text="@string/demo_02"
                        style="@style/general_text_view_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/text_subtext"
                        android:layout_toRightOf="@id/activities_tv_check_in"
                        android:paddingStart="@dimen/d10dip"
                        android:text="@string/check_in"
                        android:lineSpacingMultiplier="1.29"
                        style="@style/general_text_view_style"/>

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color_for_buttons"
                        android:layout_marginTop="@dimen/d10dip"
                        android:layout_below="@id/activities_tv_check_in"
                />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d10dip">

                <TextView
                        android:id="@+id/activities_tv_govps"
                        android:layout_width="@dimen/d70dip"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/link_color"
                        android:textStyle="bold"
                        android:text="@string/demo_10"
                        style="@style/general_text_view_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/s17sp"
                        android:textColor="@color/link_color"
                        android:layout_toRightOf="@id/activities_tv_govps"
                        android:paddingStart="@dimen/d10dip"
                        android:text="@string/govps"
                        android:lineSpacingMultiplier="1.29"
                        android:drawableRight="@drawable/ic_govps"
                        android:drawablePadding="@dimen/d14dip"
                        style="@style/general_text_view_style"/>

                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_color_for_buttons"
                        android:layout_marginTop="@dimen/d10dip"
                        android:layout_below="@id/activities_tv_govps"
                />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
