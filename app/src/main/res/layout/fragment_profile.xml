<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorWhite"
              android:orientation="vertical"
              tools:context=".ui_section.home_section.profile_section.FragmentProfile">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d200dip"
            android:background="@drawable/profile_background">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10.0"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:padding="@dimen/d10dip"
                    android:gravity="center_vertical">
                <TextView
                        android:id="@+id/profile_tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emmalynn"
                        android:textSize="@dimen/s22sp"
                        android:textColor="@color/text_entry_color"
                        android:textStyle="bold"
                        style="@style/general_text_view_style"
                        android:padding="@dimen/d10dip"
                        android:paddingTop="@dimen/d20dip"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d10dip"
                        android:id="@+id/ll_progress">
                    <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/d6dip"
                            android:id="@+id/profile_progress"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:max="100"
                            android:progress="40"
                            android:progressDrawable="@drawable/swipe_card_progress"
                            android:layout_weight="90"
                            android:layout_gravity="center"/>
                    <TextView
                            android:id="@+id/profile_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="@string/demo_percentage_40"
                            android:textColor="@color/text_entry_color"
                            android:textSize="@dimen/s17sp"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/d20dip"
                            android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complete_your_profile"
                        android:textSize="@dimen/s16sp"
                        android:textColor="@color/text_entry_color"
                        style="@style/general_text_view_style"
                        android:padding="@dimen/d10dip"
                        android:id="@+id/tv_bonus_message"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:padding="@dimen/d10dip"
            >
                <RelativeLayout
                        android:layout_width="@dimen/d80dip"
                        android:layout_height="@dimen/d80dip"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/d10dip"
                >
                    <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/iv_photo"
                            android:layout_width="@dimen/d80dip"
                            android:layout_height="@dimen/d80dip"
                            android:src="@drawable/profile_pic_3"
                            app:civ_border_color="#EEEEEE"
                            app:civ_border_width="0dp"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="0"
                            app:civ_shadow_color="#8BC34A"/>
                </RelativeLayout>
                <Button
                        android:id="@+id/profile_btn_view"
                        style="@style/simple_button_next"
                        android:layout_height="@dimen/d46dip"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/s14sp"
                        android:text="@string/view"
                        android:layout_marginTop="@dimen/d20dip"
                        android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dip"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="5"
                    android:text="@string/notification"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/text_entry_color"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="3"
                    android:text="03"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/notification_color_bg"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/d10dip"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_bell_plain"/>
            </RelativeLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_for_buttons"
                android:layout_marginStart="@dimen/d10dip"
                android:layout_marginEnd="@dimen/d10dip"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dip"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_leaderboard">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="5"
                    android:text="@string/leaderboard"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/text_entry_color"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="3"
                    android:text="41"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/notification_color_bg"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/d10dip"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_leaderboard_simple"/>
            </RelativeLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_for_buttons"
                android:layout_marginStart="@dimen/d10dip"
                android:layout_marginEnd="@dimen/d10dip"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <LinearLayout
                android:id="@+id/ll_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dip"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="5"
                    android:text="@string/settings"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/text_entry_color"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="3"
                    android:text=""
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/notification_color_bg"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/d10dip"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="@string/app_name"
                />
            </RelativeLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_for_buttons"
                android:layout_marginStart="@dimen/d10dip"
                android:layout_marginEnd="@dimen/d10dip"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_help_and_support">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dip"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="5"
                    android:text="@string/help"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/text_entry_color"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="3"
                    android:text=""
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/notification_color_bg"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/d10dip"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_help"/>
            </RelativeLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_for_buttons"
                android:layout_marginStart="@dimen/d10dip"
                android:layout_marginEnd="@dimen/d10dip"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_about">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d50dip"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="horizontal"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="5"
                    android:text="@string/about"
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/text_entry_color"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    style="@style/general_text_view_style"
                    android:layout_weight="3"
                    android:text=""
                    android:textSize="@dimen/s20sp"
                    android:padding="@dimen/d10dip"
                    android:textColor="@color/notification_color_bg"
            />
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:layout_weight="2"
                    android:layout_gravity="end"
                    android:paddingEnd="@dimen/d10dip"
            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_about_govida"/>
            </RelativeLayout>
        </LinearLayout>
        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color_for_buttons"
                android:layout_marginStart="@dimen/d10dip"
                android:layout_marginEnd="@dimen/d10dip"
        />
    </LinearLayout>


</LinearLayout>