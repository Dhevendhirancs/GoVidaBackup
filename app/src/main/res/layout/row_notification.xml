<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="10.0"
>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:paddingTop="@dimen/d14dip"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
    >
        <ImageView
                android:id="@+id/notification_iv"
                android:layout_width="@dimen/d14dip"
                android:layout_height="@dimen/d14dip"
                android:src="@drawable/orange_notification"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.0"
            android:orientation="vertical"
            android:padding="@dimen/d8dip">
        <TextView
                android:id="@+id/notification_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Up!"
                android:textStyle="bold"
                android:paddingEnd="@dimen/d5dip"
                android:textColor="@color/text_entry_color"
                android:textSize="@dimen/s16sp"
                />
        <TextView
                android:id="@+id/notification_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your GoVida 24 Hour Step Challenge has finished."
                android:textColor="@color/text_entry_color"
                android:paddingEnd="@dimen/d10dip"
                android:layout_marginTop="@dimen/d5dip"
                android:textSize="@dimen/s16sp"
        />
        <TextView
                android:id="@+id/notification_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Days ago"
                android:textColor="@color/text_color_day"
                android:paddingEnd="@dimen/d10dip"
                android:layout_marginTop="@dimen/d5dip"
                android:textSize="@dimen/s14sp"
        />
    </LinearLayout>
</LinearLayout>
