<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        tools:context=".ui_section.home_section.challenges_section.ActivityChallengeDetails">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:id="@+id/ll_reward_parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d220dip">
            <ImageView android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/travel_reward_detail"
                       android:scaleType="fitXY"
                       android:id="@+id/iv_reward_image"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:background="#80000000">
                <LinearLayout
                        android:id="@+id/ll_challenge_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/d14dip"
                            android:paddingBottom="@dimen/d24dip">
                        <TextView
                                android:id="@+id/rewards_tv_reward_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/demo_reward_title"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s22sp"
                                android:layout_above="@+id/rewards_tv_info"/>
                        <TextView
                                android:id="@+id/rewards_tv_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/demo_reward_info"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s16sp"
                                android:layout_above="@+id/rewards_tv_points"
                                android:paddingBottom="@dimen/d16dip"/>
                        <TextView
                                android:id="@+id/rewards_tv_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/demo_govps"
                                style="@style/general_text_view_style"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/s14sp"
                                android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="7">
                    <RelativeLayout
                            android:id="@+id/layout_rl_progress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:paddingBottom="@dimen/d24dip">
                        <TextView
                                android:id="@+id/rewards_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textSize="@dimen/s14sp"
                                android:textColor="@color/colorWhite"
                                android:layout_alignParentBottom="true"
                                android:drawableLeft="@drawable/ic_pending"
                                android:drawablePadding="@dimen/d5dip"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/layout_rl_accpet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/d14dip"
                            android:paddingBottom="@dimen/d24dip">
                        <Button
                                android:id="@+id/layout_btn_accept"
                                style="@style/simple_button_next"
                                android:layout_height="@dimen/d40dip"
                                android:layout_width="match_parent"
                                android:text="@string/redeem"
                                android:layout_alignParentBottom="true"
                                android:textSize="@dimen/s14sp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
                android:id="@+id/rl_challenge_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/d10dip"
                android:background="@color/bg_color_for_buttons"
                android:paddingBottom="@dimen/d10dip"
                android:paddingStart="@dimen/d10dip"
                android:paddingEnd="@dimen/d10dip"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
            <!--<LinearLayout-->
                    <!--android:id="@+id/chl_details_ll_duration"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_weight="40">-->
                <!--<TextView-->
                        <!--android:id="@+id/chl_details_tv_duration"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--style="@style/general_text_view_style"-->
                        <!--android:text="24 \nHours"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textColor="@color/text_entry_color"-->
                <!--/>-->
            <!--</LinearLayout>-->
            <LinearLayout
                    android:id="@+id/chl_details_ll_points"
                    android:layout_toRightOf="@id/chl_details_ll_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="30">
                <TextView
                        android:id="@+id/tv_reward_points_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/general_text_view_style"
                        android:text="20 GoVPs"
                        android:textStyle="bold"
                        android:textColor="@color/text_entry_color"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/d10dip"/>

            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_weight="30">
                <LinearLayout
                        android:id="@+id/chl_details_ll_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/d20dip">
                <TextView
                        android:id="@+id/rewards_status_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="@dimen/s14sp"
                        android:textColor="@color/text_entry_color"
                        android:drawableLeft="@drawable/ic_pending"
                        android:drawablePadding="@dimen/d5dip"/>
                    <!--<TextView-->
                            <!--android:id="@+id/chl_details_tv_status"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--style="@style/general_text_view_style"-->
                            <!--android:text="75%"-->
                            <!--android:textStyle="bold"-->
                            <!--android:textColor="@color/link_color"/>-->
                    <!--<TextView-->
                            <!--android:id="@+id/chl_details_tv_complete"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--style="@style/general_text_view_style"-->
                            <!--android:text="Complete"-->
                            <!--android:textColor="@color/text_entry_color"/>-->
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/d40dip"
                              android:paddingLeft="@dimen/d10dip"
                              android:paddingRight="@dimen/d10dip">
                    <Button
                            android:id="@+id/layout_rewards_btn_accept"
                            style="@style/simple_button"
                            android:text="@string/redeem"
                            android:layout_width="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/d10dip"
                android:paddingTop="@dimen/d10dip"
                android:paddingEnd="@dimen/d10dip"
                android:layout_below="@id/ll_reward_parent"
                android:layout_above="@id/rl_challenge_bottom">
            <WebView
                    android:id="@+id/reward_details_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
