<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui_section.login_section.ActivityLogin">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10dip"
            android:visibility="invisible"
    >

        <Button
                android:id="@+id/tv_link_register"
                android:layout_width="wrap_content"
                style="@style/simple_button_grey"
                android:text="@string/link_register"
                android:lineSpacingMultiplier="1.20"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-25dip"
                android:layout_marginTop="@dimen/d40dip"
                android:layout_marginBottom="@dimen/d10dip"
                android:paddingEnd="@dimen/d40dip"
                android:paddingStart="@dimen/d20dip"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/d20dip"
            android:layout_marginStart="@dimen/d20dip"
            android:layout_marginEnd="@dimen/d20dip">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_forgot_password"
                android:padding="@dimen/d10dip"
                style="@style/general_text_view_style"
                android:textSize="@dimen/s26sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_boldcondensed"
                android:textColor="@color/colorBlack"/>

        <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:fontFamily="@font/roboto_regular"-->
                <!--android:layout_marginTop="@dimen/d20dip"-->
                <!--android:paddingTop="@dimen/d10dip"-->
                <!--android:paddingStart="@dimen/d20dip"-->
                <!--style="@style/general_text_view_style"-->
                <!--android:textSize="@dimen/s18sp"-->
                <!--android:text="@string/info_email"-->
                <!--android:gravity="center"/>-->

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/forgot_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:minLines="1"
                    android:layout_marginTop="@dimen/d20dip"
                    android:paddingTop="@dimen/d10dip"
                    android:paddingStart="@dimen/d20dip"
                    android:paddingEnd="@dimen/d10dip"
                    style="@style/general_text_view_style"
                    android:textSize="@dimen/s18sp"
                    android:maxLength="50"
                    android:hint="@string/hint_email"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/d20dip"/>

        </RelativeLayout>

        <Button
            android:id="@+id/forgot_btn_reset"
            android:layout_marginTop="@dimen/d20dip"
            android:textSize="@dimen/s18sp"
            android:text="@string/btn_reset"
            style="@style/simple_button"
        />

    </LinearLayout>

</LinearLayout>