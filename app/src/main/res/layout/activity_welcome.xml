<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".ui_section.welcome_slider_section.ActivityWelcome">

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d4dip"
            app:dotsColor="@color/sec_dot"
            app:dotsCornerRadius="10dp"
            app:dotsSize="@dimen/d10dip"
            app:dotsSpacing="@dimen/d4dip"
            app:dotsWidthFactor="2.5"
            android:gravity="center"
            app:selectedDotColor="@color/colorWhite"
            app:progressMode="true"
            android:layout_above="@id/rl_btns"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d25dip"
            android:layout_marginBottom="@dimen/d50dip"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="@dimen/d40dip"
                  android:layout_marginLeft="@dimen/d10dip"
                  android:layout_marginRight="@dimen/d10dip"
                  android:id="@+id/rl_btns"
                    >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/ll_skip_next">
        <Button
                android:id="@+id/btn_skip"
                android:layout_height="@dimen/s50sp"
                android:layout_width="match_parent"
                style="@style/simple_button_skip"
                android:text="@string/skip"
                android:layout_weight="50"
                android:layout_marginRight="@dimen/d5dip"/>
        <Button
                android:id="@+id/btn_next"
                style="@style/simple_button_next"
                android:layout_height="@dimen/d50dip"
                android:layout_width="match_parent"
                android:text="@string/next"
                android:layout_weight="50"
                android:layout_marginLeft="@dimen/d5dip"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:id="@+id/ll_get_started">
            <Button
                    android:id="@+id/btn_get_started"
                    style="@style/simple_button_next"
                    android:layout_height="@dimen/d50dip"
                    android:layout_width="@dimen/d220dip"
                    android:text="@string/start"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
