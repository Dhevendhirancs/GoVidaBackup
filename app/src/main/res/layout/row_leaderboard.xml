<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:paddingLeft="@dimen/d10dip"
            android:paddingRight="@dimen/d10dip">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d80dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d10dip"
            android:layout_weight="55">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_current_user"
                android:layout_width="@dimen/d60dip"
                android:layout_height="@dimen/d60dip"
                android:src="@drawable/profile_pic_3"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:civ_shadow_color="#8BC34A"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="30"
                  android:gravity="center_vertical">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/demo_leader_name"
                  android:textColor="@color/text_entry_color"
                  android:textSize="@dimen/s14sp"
                  style="@style/general_text_view_style"
                  android:gravity="center_vertical"
                  android:layout_marginBottom="@dimen/d5dip"
                  android:textStyle="bold"
            android:id="@+id/tv_name"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/demo_leader_steps"
                      style="@style/general_text_view_style"
                      android:textSize="@dimen/s14sp"
                      android:textColor="@color/text_subtext"
                    android:id="@+id/tv_steps"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/demo_leader_distance"
                      style="@style/general_text_view_style"
                      android:layout_marginLeft="@dimen/d5dip"
                      android:textSize="@dimen/s14sp"
                      android:textColor="@color/text_subtext"
                    android:id="@+id/tv_distance"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="60">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/leaderboard_position"
                   android:layout_centerInParent="true"
                    android:id="@+id/iv_position"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/demo_leader_postition"
                  android:layout_centerInParent="true"
                  android:textColor="@color/text_subtext"
                  android:textSize="@dimen/s14sp"
                  style="@style/general_text_view_style"
                android:id="@+id/tv_position"/>
    </RelativeLayout>
</LinearLayout>